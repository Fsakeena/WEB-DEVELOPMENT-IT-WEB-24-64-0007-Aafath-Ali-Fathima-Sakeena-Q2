@page
@model WebApplication2.Pages.AddStudent.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Students Details.</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].CID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
